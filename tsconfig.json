{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "lib": ["es7", "dom"],
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "components": ["src/components"],
      "config": ["config"],
      "gm": ["src/components/google-maps"],
      "mapbox": ["src/components/mapbox"],
      "maplayout": ["src/components/layout/map-layout"],
      "osm": ["src/components/osm"],
      "reducers": ["src/components/utils/reducers"],
      "src": ["src"],
      "typings": ["typings"],
      "utils": ["src/components/utils"],
    }
  },
  "exclude": [
    "node_modules"
  ]
}
